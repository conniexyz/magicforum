<div class="views"
    <div class-"form-holder">
          <%=form_for(@view, url: topic_post_comment_path@topic, @post, @comment), html: {id: ""}>"view-create-form"})do |f|%>
            <h1 class="text-center">
              Edit View
            </h1>

          <div class-"form-group">
                <h4><%=f.label :title_field, "Title" %></h4>
                <%=f.text_field :title, required: true, id: "topic_title_field", class: 'form-control'%>
          </div>

          <div class-"form-group">
              <h4><%=f.label :text_field, "Body"%></h4>
              <%=f.text_area :body, id: "post_body_field", class: 'form-control'%>
          </div>

          <div class="form-group text-center">
              <%=f.submit "Edit Comment", class: "btn btn-success btn-lg"%>
         </div>
    <%end%>
  </div>
</div>
