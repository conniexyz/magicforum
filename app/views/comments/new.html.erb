<div class="comments">
    <div class-"form-holder">
          <%-form_for(@comment, url: topic_post_comment_path(@topic, @post, @comment), html: {id: "comment-create-form"})do |f|%>
          <h1 class="text-center">
               New comment
         </h1>

        <div class-"form-group">
             <h4><%=f.label :title_field, "Title" %></h4>
             <%=f.text_field :title, required: true, id: "topic_title_field", class: 'form-control'%>
        </div>

          <div class-"form-group">
               <h4><%=f.label :text_field, "Body"%></h4>
               <%=f.text_area :body, id: "post_body_field", class: 'form-control'%>
          </div>
        <%end%>
      </div>
</div>
